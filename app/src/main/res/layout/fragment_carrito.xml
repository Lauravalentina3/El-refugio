<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:gravity="center_horizontal"
        android:id="@+id/layout_productos">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/carrito_titulo"
            android:textColor="@color/negro"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_clinique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/imagen_borde_redondo"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_clinique_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clinique_corrector_titulo"
                android:textColor="@color/blanco"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_clinique_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/clinique_corrector_detalle"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/btn_eliminar_clinique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/gris"
                android:text="@string/eliminar"
                android:textColor="@color/gris_oscuro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_maybelline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/imagen_borde_redondo"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_maybelline_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maybelline_corrector_titulo"
                android:textColor="@color/blanco"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_maybelline_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/maybelline_corrector_detalle"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/btn_eliminar_maybelline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/gris"
                android:text="@string/eliminar"
                android:textColor="@color/gris_oscuro" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/resumen"
            android:textColor="@color/negro"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="start|center_vertical"
            android:textAlignment="center"
            android:backgroundTint="@color/rosado"
            android:text="@string/pagar_ahora"
            android:textColor="@color/blanco" />
    </LinearLayout>
</ScrollView>